<?xml version="1.0"?>
<config>
    <modules>
        <Goldenscent_Partner>
            <version>1.0.0</version>
        </Goldenscent_Partner>
    </modules>
    <events>
        <controller_action_layout_render_before>
            <observers>
                <goldenscent_partner_cookie>
                    <type>singleton</type>
                    <class>goldenscent_partner/observer</class>
                    <method>setCookie</method>
                </goldenscent_partner_cookie>
            </observers>
        </controller_action_layout_render_before>
        <checkout_onepage_controller_success_action>
            <observers>
                <goldenscent_partner_order>
                    <type>singleton</type>
                    <class>goldenscent_partner/observer</class>
                    <method>splitOrder</method>
                </goldenscent_partner_order>
            </observers>
        </checkout_onepage_controller_success_action>
    </events>
    <helpers>
        <goldenscent_partner>
            <class>Goldenscent_Partner_Helper</class>
        </goldenscent_partner>
    </helpers>
    <resources>
        <goldenscent_partner_setup>
            <setup>
                <module>Goldenscent_Partner</module>
            </setup>
        </goldenscent_partner_setup>
    </resources>
</config>